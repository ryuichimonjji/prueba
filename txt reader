file = open('file.txt', 'r')
f = file.read() # para abrir archivo .txt con la funci贸n

print(f) # ejecutar la funci贸n que lee el archivo



num_letras = sum(c.isalpha() for c in f)  # cuenta las letras con la funci贸n, devuelve valores true o false
num_espacios = sum(c.isspace() for c in f)  # funci贸n para cntar los espacios, devuelve valores true o false
resumen_contenido = f"Cantidad de letras: {num_letras}\nCantidad de espacios: {num_espacios}" # crea el contenido resumen


with open('resumen.txt', 'w') as resumen_archivo: # escribe el resumen en .txt
    resumen_archivo.write(resumen_contenido)
